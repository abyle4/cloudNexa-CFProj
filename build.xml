<?xml version="1.0"?>
    <project name="Automated CloudFormation Project" default="compile">

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac includeantruntime="false" srcdir="src/cloudnexa/cf/maker" destdir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/CF-Creator.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="cloudnexa.cf.maker.Finder"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/CF-Creator.jar" fork="true"/>
    </target>

</project>
